datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SampleFile {
  createdAt   DateTime @default(now())
  fileContent String?
  fileName    String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model GrammarFile {
  createdAt   DateTime @default(now())
  fileContent String?
  fileName    String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model FixSuggestion {
  applied    Boolean?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  suggestion String?
  updatedAt  DateTime @updatedAt
}

model ErrorList {
  columnNumber Int?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  lineNumber   Int?
  message      String?
  updatedAt    DateTime @updatedAt
}
